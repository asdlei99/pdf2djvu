exec sed \
  -e '/<!--# *\(.*\) *#-->/ { s//\1/; b; }' \
  -e '/<!--.*-->/ { s///g; b; }' \
  -e 's/\\\\/\\\\/g' \
  -e 's/"/\\"/g' \
  -e 's/^/"/; s/$/\\n"/'

# vim:ts=2 sw=2 et
