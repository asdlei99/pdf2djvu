exec sed -e '
/<!--# *\(.*\) *#-->/ {
  s//\1/
  b
}
/<!--.*-->/ {
  s///g
  b
}
s/\\\\/\\\\/g
s/"/\\"/g
s/^/"/
s/$/\\n"/
'

