exec > paths.hh
cat <<EOF
/* This file was automatically generated by \`\`$0\`\`. */

#ifndef PDF2DJVU_PATHS
#define PDF2DJVU_PATHS
namespace paths
{
EOF

while [ $# -gt 0 ]
do
  key="$1"
  value="$2"
  printf '  static const char %s[] = "%s";\n' "$key" "$value"
  shift 2
done

cat <<EOF
}
#endif
EOF
